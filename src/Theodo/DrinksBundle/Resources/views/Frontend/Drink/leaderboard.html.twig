{% extends '::base.html.twig' %}

{% block content %}
<div class="row-fluid">
    <div class="span12">
        <h3>Leaderboard</h3>

        <table class="table table-striped table-bordered table-condensed">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Consommations</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.drinks }}</td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
