{% extends 'layout.html.twig' %}

{% block content %}
<div class="row-fluid">
    <div class="span12">
        <h3>Stock de boissons</h3>

        <table class="table table-striped table-bordered table-condensed">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Prix de vente</th>
                <th>Prix d'achat (en pack)</th>
                <th>Stock</th>
            </tr>
            </thead>
            <tbody>
            {% for drink in drinks %}
            <tr>
                <td>{{ drink.name }}</td>
                <td>{{ drink.formattedSalePrice }}</td>
                <td>{{ drink.formattedPurchasePrice }}</td>
                <td>{{ drink.quantity }}</td>
            </tr>
            {% else %}
            <tr>
                <td colspan="4">On n'a plus de boisson !</td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
